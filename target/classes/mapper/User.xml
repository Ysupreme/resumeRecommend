<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ysupreme.resume.mapper.UserMapper">
    <update id="update">
        update userinfo
        <set>
            <if test="username != null">
                userName = #{username},
            </if>
            <if test="passwd != null">
                passWd = #{passwd},
            </if>
            <if test="userid != null">
                userId = #{userid},
            </if>
            <if test="permission != null">
                permission = #{permission},
            </if>
            <if test="usertype != null">
                userType = #{usertype},
            </if>
        </set>
        <where>
            userId = #{userid}
        </where>
    </update>

</mapper>
